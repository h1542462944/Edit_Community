<Page x:Class="Edit_Community.SettingsMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Edit_Community"
      xmlns:libr="clr-namespace:User.UI;assembly=HTLibrary"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="290"
      Title="设置主页">

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column ="1">
            <libr:UImageMenu x:Name="UImgTheme" Text="个性化" Height="40" ControlStyle="Light" ImageSource="Assets/theme.png" Tapped="UImageMenu_Tapped" Margin="0,10"/>
            <libr:UImageMenu x:Name="UImgExtension" Text="扩展功能" Height="40" ControlStyle="Light" ImageSource="Assets/3.png" Tapped="UImageMenu_Tapped" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>
